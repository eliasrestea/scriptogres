---
import { Icon } from "astro-icon";
interface Props {
	icon: string;
	body: string;
	title: string;
}
const { icon, title, body } = Astro.props;
---

<li class="relative border bg-gradient-to-br from-card-primary to-card-secondary
		   block sm:flex sm:gap-5 p-5 sm:p-8 rounded-xl shadow-card">
	<div class="mb-3 mt-0 sm:mt-5 sm:mb-0 flex justify-center text-light-gray">
		<Icon name={ icon } class="h-12 " />
	</div>
	<div class="text-center sm:text-left">
		<p class="mb-2 text-lg text-white font-bold">{ title }</p>
		<p class="text-light leading-relaxed font-light">{ body }</p>
	</div>
</li>
