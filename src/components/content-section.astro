---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<header class="mb-6">
  <h2 class="relative text-white font-semibold text-2xl sm:text-3xl pb-1.5">
      <p class="mb-2 sm:mb-4">{title}</p>
      <area class="absolute bottom-0 left-0 w-8 h-[3px] sm:w-10 sm:h-[5px] rounded-[3px] bg-light-slate">
  </h2>
</header>
<section class="mt-3 sm:mt-5">
  <slot name="text" />
  <slot name="sub-section" />
</section>
<slot />

